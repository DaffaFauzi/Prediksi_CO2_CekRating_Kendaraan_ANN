<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="170sp"
        android:layout_height="170sp"
        android:src="@drawable/car"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180sp"/>

    <TextView
        android:id="@+id/jdul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikasi Cek Rating\nCO2 Kendaraan"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/desk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikasi untuk membantu Anda Memerika\nRating Karbon Dioksida Kendaraan Anda"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/jdul"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginTop="8sp"/>

    <Button
        android:id="@+id/btnstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masuk Aplikasi"
        android:layout_below="@id/desk"
        android:layout_marginTop="86sp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>